# Docker Environment Configuration Template
# Copy this file to .env and update the values for your environment

# ==================== INFRASTRUCTURE ====================

# MongoDB
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=password123

# RabbitMQ
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest

# Redis (No password by default)
REDIS_PASSWORD=

# ==================== JWT SECRETS (CHANGE IN PRODUCTION!) ====================
JWT_SECRET=your_jwt_secret_here
ACCESS_TOKEN_SECRET=your_access_token_secret_here
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here

# ==================== EMAIL CONFIGURATION ====================
EMAIL_FROM=your-email@gmail.com
EMAIL_PASSWORD=your-app-password-here

# ==================== AWS S3 CONFIGURATION ====================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-southeast-1
AWS_BUCKET_NAME=your-bucket-name

# ==================== OPENAI CONFIGURATION ====================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
OPENAI_VISION_MODEL=gpt-4o
MAX_TOKENS=2000
TEMPERATURE=0.7

# ==================== VNPAY PAYMENT CONFIGURATION ====================
VNPAY_TMN_CODE=your_vnpay_tmn_code
VNPAY_HASH_SECRET=your_vnpay_hash_secret
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNPAY_RETURN_URL=http://localhost:3007/api/payments/return/vnpay

# ==================== STRIPE PAYMENT CONFIGURATION ====================
# Get from https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
# Webhook signing secret (get from Stripe Dashboard)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
# Return URL for Stripe callback (VNPay-style - backend endpoint)
STRIPE_RETURN_URL=http://localhost:3007/api/payments/return/stripe
# Exchange rate VND to USD (default: 25000)
STRIPE_EXCHANGE_RATE=25000

# Database Names
AUTH_DB_NAME=dental_clinic_auth
ROOM_DB_NAME=dental_clinic_room
SCHEDULE_DB_NAME=dental_clinic_schedule
APPOINTMENT_DB_NAME=dental_clinic_appointment
RECORD_DB_NAME=dental_clinic_record
MEDICINE_DB_NAME=dental_clinic_medicine
SERVICE_DB_NAME=dental_clinic_service
INVOICE_DB_NAME=dental_clinic_invoice
PAYMENT_DB_NAME=dental_clinic_payment
STATISTIC_DB_NAME=dental_clinic_statistic
CHATBOT_DB_NAME=dental_clinic_chatbot
CHAT_DB_NAME=dental_clinic_chat

# CORS Origins (for development)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080
SOCKET_CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080